{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["rolldown.ts"],
      "dependsOn": ["^build"]
    },
    "build:app": {
      "dependsOn": ["build"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "lint": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.css", "**/biome.json"],
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"]
    }
  }
}
