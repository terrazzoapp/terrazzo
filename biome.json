{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**", "!**/test/fixtures/**", "!**/test/**/want.*"],
    "ignoreUnknown": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useArrowFunction": "off"
      },
      "correctness": {
        "useImportExtensions": "off",
        "useExhaustiveDependencies": "off"
      },
      "style": {
        "noDescendingSpecificity": "off",
        "noNonNullAssertion": "off",
        "noUselessElse": "off",
        "useBlockStatements": "error"
      },
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noConsole": "error",
        "noDuplicateProperties": "off",
        "noFallthroughSwitchClause": "error",
        "noExplicitAny": "warn",
        "noShadowRestrictedNames": "error",
        "useGuardForIn": "error"
      },
      "nursery": {}
    }
  },
  "overrides": [
    {
      "includes": ["**/*.test.*"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
