{
  "name": "@terrazzo/monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "build": "turbo run build",
    "build:apps": "turbo run build:app",
    "changeset": "changeset",
    "inject-license": "node scripts/inject-license.js",
    "dev": "pnpm run -r --parallel --if-present dev",
    "lint": "turbo run lint",
    "lint:spell": "cspell lint \"packages/**\" \"www/**\"",
    "format": "turbo run format",
    "test": "turbo run test",
    "prepublishOnly": "pnpm run build",
    "version": "pnpm run build && changeset version"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@biomejs/biome": "^2.3.8",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.10.1",
    "@vitest/browser": "catalog:",
    "cspell": "^9.3.2",
    "execa": "^9.6.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.1",
    "rolldown": "1.0.0-beta.52",
    "rolldown-plugin-dts": "^0.18.1",
    "strip-ansi": "^7.1.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
