    "@types/node": "^25.3.2",
    "@vitest/browser": "catalog:",
    "@vitest/browser-playwright": "catalog:",
    "cspell": "^9.7.0",
    "execa": "^9.6.1",
    "merge-anything": "^5.1.7",
    "playwright": "catalog:",
    "prettier": "^3.8.1",
    "rolldown": "1.0.0-rc.5",
    "rolldown-plugin-dts": "^0.22.2",
    "strip-ansi": "^7.2.0",
    "stylelint": "^17.4.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-order": "^7.0.1",
    "turbo": "^2.8.12",
    "typescript": "^5.9.3",
    "vite": "catalog:",
    "vitest": "catalog:"
