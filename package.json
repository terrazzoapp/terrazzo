    "test": "turbo run test",
    "prepublishOnly": "pnpm run build",
    "version": "pnpm run build && changeset version"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@biomejs/biome": "^2.4.4",
    "@changesets/changelog-github": "^0.5.2",
