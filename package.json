{
  "name": "cobalt-monorepo",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/drwpow/cobalt-ui.git"
  },
  "homepage": "https://cobalt-ui.pages.dev",
  "scripts": {
    "build": "pnpm run -r --if-present \"build\"",
    "build:examples": "pnpm run --parallel --if-present build:tokens",
    "changeset": "changeset",
    "dev": "pnpm run --parallel --if-present dev --filter \"@cobalt-ui/*\"",
    "lint": "eslint \"packages/**/*.{ts,js,cjs,mjs}\"",
    "test": "pnpm run --parallel --if-present test",
    "prepublishOnly": "pnpm run build",
    "version": "pnpm run build && changeset version && pnpm i --no-frozen-lockfile"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.27.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "js-yaml": "^4.1.0",
    "prettier": "^3.2.2",
    "typescript": "^5.3.3"
  }
}
