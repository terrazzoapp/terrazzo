{
  "name": "@terrazzo/plugin-tailwind",
  "version": "0.0.4",
  "description": "Generate Tailwind v4 theme using DTCG design tokens.",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "design system",
    "dtcg",
    "w3c",
    "tailwind",
    "css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/terrazzoapp/terrazzo.git",
    "directory": "packages/plugin-tailwind"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rolldown -c && attw --profile esm-only --pack .",
    "dev": "rolldown -c -w",
    "format": "biome check --fix --unsafe .",
    "lint": "pnpm --filter @terrazzo/plugin-tailwind run \"/^lint:(js|ts)/\"",
    "lint:js": "biome check .",
    "lint:ts": "tsc --noEmit",
    "test": "vitest run"
  },
  "peerDependencies": {
    "@terrazzo/cli": "^0.7.0",
    "@terrazzo/plugin-css": "^0.7.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@terrazzo/token-tools": "workspace:^"
  },
  "devDependencies": {
    "@terrazzo/cli": "workspace:^",
    "@terrazzo/parser": "workspace:^",
    "@terrazzo/plugin-css": "workspace:^",
    "tailwindcss": "^4.1.5"
  }
}
