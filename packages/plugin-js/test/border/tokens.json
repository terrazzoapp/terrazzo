{
  "border": {
    "solid": {
      "$type": "border",
      "$description": "Default border",
      "$value": {
        "color": {
          "colorSpace": "srgb",
          "components": [0.65, 0.69, 0.71]
        },
        "width": { "value": 1, "unit": "px" },
        "style": "solid"
      },
      "$extensions": {
        "mode": {
          "light": {
            "color": {
              "colorSpace": "srgb",
              "components": [0.65, 0.69, 0.71]
            },
            "width": { "value": 1, "unit": "px" },
            "style": "solid"
          },
          "dark": {
            "color": {
              "colorSpace": "srgb",
              "components": [0.08, 0.09, 0.11]
            },
            "width": { "value": 1, "unit": "px" },
            "style": "solid"
          }
        }
      }
    },
    "dashed": {
      "$type": "border",
      "$description": "Border for placeholder items",
      "$value": {
        "color": {
          "colorSpace": "srgb",
          "components": [0.65, 0.69, 0.71]
        },
        "width": { "value": 1.5, "unit": "px" },
        "style": {
          "dashArray": [{ "value": 0.5, "unit": "rem" }, { "value": 0.25, "unit": "rem" }],
          "lineCap": "round"
        }
      },
      "$extensions": {
        "mode": {
          "light": {
            "color": {
              "colorSpace": "srgb",
              "components": [0.65, 0.69, 0.71]
            },
            "width": "1.5px",
            "style": {
              "dashArray": [{ "value": 0.5, "unit": "rem" }, { "value": 0.25, "unit": "rem" }],
              "lineCap": "round"
            }
          },
          "dark": {
            "color": {
              "colorSpace": "srgb",
              "components": [0.08, 0.09, 0.11]
            },
            "width": "1.5px",
            "style": {
              "dashArray": ["0.5rem", "0.25rem"],
              "lineCap": "round"
            }
          }
        }
      }
    },
    "default": {
      "$type": "border",
      "$value": {
        "width": { "value": 2.5, "unit": "px" },
        "style": "solid",
        "color": "{color.border}"
      }
    }
  },
  "color": {
    "$type": "color",
    "base": {
      "gray": {
        "10": {
          "$value": { "colorSpace": "oklch", "components": [0.1, 0.002, 270] }
        },
        "15": {
          "$value": { "colorSpace": "oklch", "components": [0.15, 0.001577, 290] }
        },
        "20": {
          "$value": { "colorSpace": "oklch", "components": [0.2, 0.001422, 310] }
        },
        "25": {
          "$value": { "colorSpace": "oklch", "components": [0.25, 0.001614, 340] }
        },
        "30": {
          "$value": { "colorSpace": "oklch", "components": [0.3, 0.002057, 0] }
        },
        "40": {
          "$value": { "colorSpace": "oklch", "components": [0.4, 0.003261, 18] }
        },
        "50": {
          "$value": { "colorSpace": "oklch", "components": [0.5, 0.004607, 27] }
        },
        "60": {
          "$value": { "colorSpace": "oklch", "components": [0.6, 0.006, 31] }
        },
        "70": {
          "$value": { "colorSpace": "oklch", "components": [0.7, 0.00575, 31] }
        },
        "80": {
          "$value": { "colorSpace": "oklch", "components": [0.8, 0.0055, 31] }
        },
        "85": {
          "$value": { "colorSpace": "oklch", "components": [0.85, 0.005375, 31] }
        },
        "90": {
          "$value": { "colorSpace": "oklch", "components": [0.9, 0.00525, 31] }
        },
        "95": {
          "$value": { "colorSpace": "oklch", "components": [0.94, 0.005125, 31] }
        },
        "100": {
          "$value": { "colorSpace": "oklch", "components": [1.0, 0, 0] }
        }
      }
    },
    "border": {
      "$value": "{color.base.gray.20}",
      "$extensions": {
        "mode": {
          "light": "{color.base.gray.20}",
          "dark": "{color.base.gray.80}"
        }
      }
    }
  }
}
