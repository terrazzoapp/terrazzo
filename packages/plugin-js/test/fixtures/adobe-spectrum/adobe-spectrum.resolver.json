{
  "$schema": "https://www.designtokens.org/schemas/2025.10/resolver.json",
  "name": "Adobe Spectrum",
  "version": "2025.10",
  "sets": {
    "base": {
      "sources": [{ "$ref": "./base.tokens.json" }]
    }
  },
  "modifiers": {
    "theme": {
      "contexts": {
        "light": [{ "$ref": "./theme-light.tokens.json" }],
        "dark": [{ "$ref": "./theme-dark.tokens.json" }]
      }
    },
    "size": {
      "contexts": {
        "desktop": [{ "$ref": "./size-desktop.tokens.json" }],
        "mobile": [{ "$ref": "./size-mobile.tokens.json" }]
      }
    }
  },
  "resolutionOrder": [{ "$ref": "#/sets/base" }, { "$ref": "#/modifiers/theme" }, { "$ref": "#/modifiers/size" }]
}
