{
  "name": "@terrazzo/plugin-js",
  "version": "0.2.0",
  "description": "Generate JS, TS, and JSON from your design tokens schema (requires @terrazzo/cli)",
  "type": "module",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "design system",
    "dtcg",
    "w3c",
    "ts",
    "typescript"
  ],
  "main": "./dist/index.js",
  "homepage": "https://terrazzoapp.com/docs/cli/integrations/js",
  "repository": {
    "type": "git",
    "url": "https://github.com/terrazzoapp/terrazzo.git",
    "directory": "./packages/plugin-js/"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:ts && pnpm -w run inject-license @terrazzo/plugin-js dist/index.js",
    "build:ts": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json -w",
    "format": "biome check --fix --unsafe .",
    "lint": "biome check .",
    "test": "pnpm --filter @terrazzo/plugin-js run \"/^test:*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "peerDependencies": {
    "@terrazzo/cli": "^0.2.0"
  },
  "devDependencies": {
    "@terrazzo/cli": "workspace:^",
    "@terrazzo/parser": "workspace:^",
    "@terrazzo/token-tools": "workspace:^"
  }
}
