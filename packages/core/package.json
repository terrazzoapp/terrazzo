{
  "name": "@cobalt-ui/core",
  "description": "Parser/validator for the Design Tokens Community Group (DTCG) standard.",
  "version": "1.12.0",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "design tokens community group",
    "design tokens format module",
    "dtcg",
    "cli",
    "w3c design tokens",
    "design system",
    "typescript",
    "sass",
    "css",
    "style tokens",
    "style system",
    "linting",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terrazzoapp/terrazzo.git",
    "directory": "packages/core"
  },
  "homepage": "https://cobalt-ui.pages.dev",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:ts && pnpm run build:license",
    "build:clean": "del dist",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:license": "node ../../scripts/inject-license.js @cobalt-ui/core dist/index.js",
    "dev": "pnpm run --parallel \"/^dev:.*/\"",
    "lint": "biome check .",
    "dev:ts": "tsc -p tsconfig.build.json --watch",
    "test": "pnpm run \"/^test:.*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@cobalt-ui/utils": "workspace:^",
    "@types/culori": "^2.1.1",
    "@types/deep-equal": "^1.0.4",
    "culori": "^4.0.1",
    "deep-equal": "^2.2.3",
    "parse-json": "^8.1.0",
    "scule": "^1.3.0",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "strip-ansi": "^7.1.0"
  }
}
