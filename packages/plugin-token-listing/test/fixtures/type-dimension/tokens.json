{
  "control": {
    "$description": "Control element sizes",
    "default-size": { "$value": "{space.600}" },
    "small-size": { "$value": "{space.500}" }
  },
  "space": {
    "$type": "dimension",
    "000": {
      "$value": "0.125rem",
      "$extensions": { "mode": { "mobile": "0.125rem", "desktop": "0.25rem" } }
    },
    "100": {
      "$value": "0.25rem",
      "$extensions": { "mode": { "mobile": "0.25rem", "desktop": "0.375rem" } }
    },
    "200": {
      "$value": "0.5rem",
      "$extensions": { "mode": { "mobile": "0.5rem", "desktop": "0.75rem" } }
    },
    "300": {
      "$value": "0.75rem",
      "$extensions": { "mode": { "mobile": "0.75rem", "desktop": "1.25rem" } }
    },
    "400": {
      "$value": { "value": 1, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 1, "unit": "rem" }, "desktop": "1.25rem" } }
    },
    "500": {
      "$value": "1.5rem",
      "$extensions": { "mode": { "mobile": "1.5rem", "desktop": "1.75rem" } }
    },
    "600": {
      "$value": { "value": 2, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 2, "unit": "rem" }, "desktop": "2.5rem" } }
    },
    "700": {
      "$value": "2.5rem",
      "$extensions": { "mode": { "mobile": "2.5rem", "desktop": "3.5rem" } }
    },
    "800": {
      "$value": { "value": 3, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 3, "unit": "rem" }, "desktop": { "value": 4, "unit": "rem" } } }
    },
    "900": {
      "$value": { "value": 4, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 4, "unit": "rem" }, "desktop": { "value": 6, "unit": "rem" } } }
    },
    "large": { "$value": { "value": 1.5, "unit": "rem" } },
    "x-large": { "$value": { "value": 2, "unit": "rem" } },
    "2x-large": { "$value": { "value": 3, "unit": "rem" } },
    "3x-large": { "$value": { "value": 4, "unit": "rem" } }
  }
}
