{
  "$schema": "https://www.designtokens.org/schemas/2025.10/resolver.json",
  "version": "2025.10",
  "name": "flat-contexts",
  "resolutionOrder": [
    { "$ref": "#/modifiers/theme" },
    { "$ref": "#/modifiers/mode" },
    { "$ref": "#/sets/primitives" }
  ],
  "sets": {
    "primitives": {
      "sources": [{ "$ref": "primitives.json" }]
    }
  },
  "modifiers": {
    "theme": {
      "default": "orange",
      "contexts": {
        "orange": [{ "$ref": "themes.json#orange" }],
        "blue": [{ "$ref": "themes.json#blue" }]
      }
    },
    "mode": {
      "default": "light",
      "contexts": {
        "light": [{ "$ref": "modes.json#light" }],
        "dark": [{ "$ref": "modes.json#dark" }]
      }
    }
  }
}
