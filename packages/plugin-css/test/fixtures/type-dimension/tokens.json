{
  "control": {
    "$description": "Control element sizes",
    "default-size": { "$value": "{space.600}" },
    "small-size": { "$value": "{space.500}" }
  },
  "space": {
    "$type": "dimension",
    "000": {
      "$value": { "value": 0.125, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 0.125, "unit": "rem" }, "desktop": { "value": 0.25, "unit": "rem" } } }
    },
    "100": {
      "$value": { "value": 0.25, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 0.25, "unit": "rem" }, "desktop": { "value": 0.375, "unit": "rem" } } }
    },
    "200": {
      "$value": { "value": 0.5, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 0.5, "unit": "rem" }, "desktop": { "value": 0.75, "unit": "rem" } } }
    },
    "300": {
      "$value": { "value": 0.75, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 0.75, "unit": "rem" }, "desktop": { "value": 1.25, "unit": "rem" } } }
    },
    "400": {
      "$value": { "value": 1, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 1, "unit": "rem" }, "desktop": { "value": 1.25, "unit": "rem" } } }
    },
    "500": {
      "$value": { "value": 1.5, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 1.5, "unit": "rem" }, "desktop": { "value": 1.75, "unit": "rem" } } }
    },
    "600": {
      "$value": { "value": 2, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 2, "unit": "rem" }, "desktop": { "value": 2.5, "unit": "rem" } } }
    },
    "700": {
      "$value": { "value": 2.5, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 2.5, "unit": "rem" }, "desktop": { "value": 3.5, "unit": "rem" } } }
    },
    "800": {
      "$value": { "value": 3, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 3, "unit": "rem" }, "desktop": { "value": 4, "unit": "rem" } } }
    },
    "900": {
      "$value": { "value": 4, "unit": "rem" },
      "$extensions": { "mode": { "mobile": { "value": 4, "unit": "rem" }, "desktop": { "value": 6, "unit": "rem" } } }
    },
    "large": { "$value": { "value": 1.5, "unit": "rem" } },
    "x-large": { "$value": { "value": 2, "unit": "rem" } },
    "2x-large": { "$value": { "value": 3, "unit": "rem" } },
    "3x-large": { "$value": { "value": 4, "unit": "rem" } }
  }
}
