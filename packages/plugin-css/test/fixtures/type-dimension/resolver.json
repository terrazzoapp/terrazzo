{
  "$schema": "https://www.designtokens.org/schemas/2025.10/resolver.json",
  "resolutionOrder": [
    { "$ref": "#/sets/base" },
    { "$ref": "#/modifiers/size" }
  ],
  "sets": {
    "base": {
      "sources": [
        {
          "control": {
            "$description": "Control element sizes",
            "default-size": { "$type": "dimension", "$value": "{space.600}" },
            "small-size": { "$type": "dimension", "$value": "{space.500}" }
          },
          "space": {
            "large": { "$type": "dimension", "$value": { "value": 1.5, "unit": "rem" } },
            "x-large": { "$type": "dimension", "$value": { "value": 2, "unit": "rem" } },
            "2x-large": { "$type": "dimension", "$value": { "value": 3, "unit": "rem" } },
            "3x-large": { "$type": "dimension", "$value": { "value": 4, "unit": "rem" } }
          }
        }
      ]
    }
  },
  "modifiers": {
    "size": {
      "contexts": {
        "mobile": [
          {
            "space": {
              "000": { "$type": "dimension", "$value": { "value": 0.125, "unit": "rem" } },
              "100": { "$type": "dimension", "$value": { "value": 0.25, "unit": "rem" } },
              "200": { "$type": "dimension", "$value": { "value": 0.5, "unit": "rem" } },
              "300": { "$type": "dimension", "$value": { "value": 0.75, "unit": "rem" } },
              "400": { "$type": "dimension", "$value": { "value": 1, "unit": "rem" } },
              "500": { "$type": "dimension", "$value": { "value": 1.5, "unit": "rem" } },
              "600": { "$type": "dimension", "$value": { "value": 2, "unit": "rem" } },
              "700": { "$type": "dimension", "$value": { "value": 2.5, "unit": "rem" } },
              "800": { "$type": "dimension", "$value": { "value": 3, "unit": "rem" } },
              "900": { "$type": "dimension", "$value": { "value": 4, "unit": "rem" } }
            }
          }
        ],
        "desktop": [
          {
            "space": {
              "000": { "$type": "dimension", "$value": { "value": 0.25, "unit": "rem" } },
              "100": { "$type": "dimension", "$value": { "value": 0.375, "unit": "rem" } },
              "200": { "$type": "dimension", "$value": { "value": 0.75, "unit": "rem" } },
              "300": { "$type": "dimension", "$value": { "value": 1, "unit": "rem" } },
              "400": { "$type": "dimension", "$value": { "value": 1.25, "unit": "rem" } },
              "500": { "$type": "dimension", "$value": { "value": 1.75, "unit": "rem" } },
              "600": { "$type": "dimension", "$value": { "value": 2.5, "unit": "rem" } },
              "700": { "$type": "dimension", "$value": { "value": 3.5, "unit": "rem" } },
              "800": { "$type": "dimension", "$value": { "value": 4, "unit": "rem" } },
              "900": { "$type": "dimension", "$value": { "value": 6, "unit": "rem" } }
            }
          }
        ]
      },
      "default": "mobile"
    }
  }
}
