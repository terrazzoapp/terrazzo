{
  "typography": {
    "family": {
      "body": { "$type": "fontFamily", "$value": ["IBM Plex Sans", "system-ui", "sans-serif"] },
      "footnote": { "$type": "fontFamily", "$value": "{typography.family.body}" },
      "heading": { "$type": "fontFamily", "$value": "Helvetica" }
    },
    "page-title": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.heading}",
        "fontSize": "48px",
        "fontVariationSettings": "\"wght\" 140, \"opsz\" 100, \"wdth\" 50",
        "fontWeight": 600,
        "lineHeight": 1.25,
        "letterSpacing": "0.125em"
      }
    },
    "subheading": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.heading}",
        "fontSize": { "value": 18, "unit": "px" },
        "fontVariationSettings": "\"wght\" 130, \"opsz\" 100, \"wdth\" 50",
        "fontWeight": 500,
        "lineHeight": 1.375,
        "letterSpacing": { "value": 0.25, "unit": "em" },
        "textTransform": "uppercase"
      }
    },
    "callout": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.body}",
        "fontSize": "18px",
        "fontVariationSettings": "\"wght\" 100, \"opsz\" 100, \"wdth\" 50",
        "fontWeight": 300,
        "fontStyle": "italic",
        "lineHeight": 1.5
      }
    },
    "body": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.body}",
        "fontSize": "16px",
        "fontWeight": 400,
        "fontVariationSettings": "\"wght\" 100, \"opsz\" 100, \"wdth\" 50",
        "lineHeight": 1.5
      },
      "$extensions": {
        "mode": {
          "mobile": {
            "fontSize": "16px"
          },
          "desktop": {
            "fontSize": "14px"
          }
        }
      }
    },
    "label": {
      "$type": "typography",
      "$value": "{typography.body}",
      "$extensions": {
        "mode": {
          "mobile": "{typography.body}",
          "desktop": "{typography.subheading}"
        }
      }
    }
  }
}
