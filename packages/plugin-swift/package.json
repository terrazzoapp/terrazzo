{
  "name": "@terrazzo/plugin-swift",
  "version": "0.0.3",
  "description": "Generate Swift code using DTCG design tokens JSON.",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "dtcg",
    "dtfm",
    "w3c",
    "swift",
    "ios"
  ],
  "main": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "homepage": "https://terrazzo.app/docs/cli/integrations/swift",
  "repository": {
    "type": "git",
    "url": "https://github.com/terrazzoapp/terrazzo.git",
    "directory": "./packages/plugin-swift/"
  },
  "scripts": {
    "build": "unbuild && attw --profile node16 --pack .",
    "dev": "unbuild -w",
    "format": "biome check --fix --unsafe .",
    "lint": "biome check .",
    "test": "vitest run"
  },
  "peerDependencies": {
    "@terrazzo/cli": "^0.7.0"
  },
  "dependencies": {
    "@terrazzo/token-tools": "workspace:^",
    "culori": "^4.0.1"
  },
  "devDependencies": {
    "@terrazzo/parser": "workspace:^",
    "@types/culori": "^4.0.0"
  }
}
