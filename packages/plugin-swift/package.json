{
  "name": "@terrazzo/plugin-swift",
  "version": "1.0.0-alpha.1",
  "description": "Generate Swift code using DTCG design tokens JSON.",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "dtcg",
    "dtfm",
    "w3c",
    "swift",
    "ios"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "homepage": "https://terrazzo.app/docs/integrations/swift",
  "repository": {
    "type": "git",
    "url": "https://github.com/terrazzoapp/terrazzo.git",
    "directory": "./packages/plugin-swift/"
  },
  "scripts": {
    "build": "rolldown -c && attw --profile esm-only --pack .",
    "dev": "rolldown -w -c",
    "format": "biome check --fix --unsafe .",
    "lint": "biome check .",
    "test": "vitest run"
  },
  "peerDependencies": {
    "@terrazzo/cli": "workspace:^"
  },
  "dependencies": {
    "@terrazzo/token-tools": "workspace:^",
    "culori": "catalog:"
  },
  "devDependencies": {
    "@terrazzo/cli": "workspace:*",
    "@terrazzo/parser": "workspace:^",
    "@types/culori": "catalog:"
  }
}
