{
  "name": "@cobalt-ui/cli",
  "description": "CLI for managing design tokens using the Design Tokens Community Group (DTCG) standard and generating code for any platform via plugins.",
  "version": "1.11.3",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "design tokens community group",
    "design tokens format module",
    "dtcg",
    "cli",
    "w3c design tokens",
    "design system",
    "typescript",
    "sass",
    "css",
    "style tokens",
    "style system"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terrazzoapp/terrazzo.git",
    "directory": "packages/cli"
  },
  "homepage": "https://cobalt-ui.pages.dev",
  "license": "MIT",
  "type": "module",
  "bin": {
    "co": "bin/cli.js",
    "cobalt": "bin/cli.js"
  },
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:ts",
    "build:clean": "del dist",
    "build:ts": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json -w",
    "lint": "biome check .",
    "test": "pnpm run \"/^test:.*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@cobalt-ui/core": "workspace:^",
    "@cobalt-ui/utils": "workspace:^",
    "chokidar": "^3.6.0",
    "culori": "^4.0.1",
    "dotenv": "^16.4.5",
    "parse-json": "^8.1.0",
    "svgo": "^3.3.2",
    "yaml": "^2.4.5",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@types/culori": "^2.1.1",
    "execa": "^8.0.1",
    "msw": "^2.3.2",
    "strip-ansi": "^7.1.0"
  }
}
