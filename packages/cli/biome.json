{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "extends": "//",
  "files": {
    "includes": ["bin/**", "src/**", "test/**/*.test.ts", "**/*.tsx"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["./bin/cli.js"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ]
}
