{
  "name": "@terrazzo/token-tools",
  "version": "0.7.4",
  "description": "Various utilities for token types",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "dtcg",
    "cli",
    "w3c",
    "design system",
    "typescript",
    "sass",
    "css",
    "style tokens",
    "style system",
    "linting",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/terrazzoapp/terrazzo.git",
    "directory": "./packages/token-tools/"
  },
  "main": "./dist/index.js",
  "exports": {
    ".":"./dist/index.js",
    "./css": "./dist/css.js",
    "./js":  "./dist/js.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rolldown -c && attw --profile esm-only --pack .",
    "dev": "rolldown -c -w",
    "lint": "pnpm --filter @terrazzo/token-tools run \"/^lint:(js|ts)/\"",
    "lint:js": "biome check .",
    "lint:ts": "tsc --noEmit",
    "format": "biome check --fix --unsafe .",
    "test": "vitest run"
  },
  "dependencies": {
    "@humanwhocodes/momoa": "^3.3.8",
    "culori": "^4.0.1",
    "wildcard-match": "^5.1.4"
  },
  "devDependencies": {
    "@types/culori": "^4.0.0"
  }
}
