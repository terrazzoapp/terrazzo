{
  "name": "@terrazzo/token-tools",
  "description": "Various utilities for token types",
  "version": "0.0.6",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "dtcg",
    "cli",
    "w3c",
    "design system",
    "typescript",
    "sass",
    "css",
    "style tokens",
    "style system",
    "linting",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/terrazzoapp/terrazzo.git",
    "directory": "./packages/token-tools/"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./css": "./dist/css/index.js",
    "./js": "./dist/js/index.js",
    "./*": "./*"
  },
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:ts && pnpm -w run inject-license @terrazzo/token-tools dist/index.js",
    "build:clean": "del-cli dist",
    "build:ts": "tsc -p tsconfig.build.json",
    "dev": "pnpm --filter @terrazzo/token-tools run --parallel \"/^dev:.*/\"",
    "lint": "biome check .",
    "dev:ts": "tsc -p tsconfig.build.json --watch",
    "test": "pnpm --filter @terrazzo/token-tools run \"/^test:.*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@humanwhocodes/momoa": "^3.1.1",
    "culori": "^4.0.1",
    "scule": "^1.3.0",
    "wildcard-match": "^5.1.3"
  },
  "devDependencies": {
    "@types/culori": "^2.1.1"
  }
}
