---
import DocsFooterNav from '../components/docs-footer-nav.astro';
import DocsHeaderNav from '../components/docs-header-nav.astro';
import DocsSidenav from '../components/docs-sidenav.astro';
import HeadMeta from '../components/head-meta.astro';
import '../styles/docs.css';

const { frontmatter } = Astro.props;
const isBeta = Astro.url.pathname.includes('/docs/2.0');
const nonBetaVersion = Astro.url.pathname.replace(/\/docs\/2\.0\/?/, '/docs/');
---

<html lang="en">
  <head>
    <HeadMeta title={frontmatter.title} description={frontmatter.description} />
    <script is:inline>
      const LS_THEME_KEY = "tz-www-theme";
      const initialValue =
        typeof localStorage !== "undefined"
          ? localStorage.getItem(LS_THEME_KEY)
          : undefined;
      if (initialValue === "light" || initialValue === "dark") {
        document.documentElement.setAttribute("data-color-mode", initialValue);
      }
    </script>
    <style>
      .docs {
        --sidebar-width: calc(5 * (var(--grid-size)));

        display: flex;
        flex-direction: column;
      }

      .banner {
        align-items: center;
        background-color: var(--tz-color-bg-selected);
        border-bottom: 1px solid var(--tz-color-border-3);
        color: var(--tz-color-text-onselected);
        display: flex;
        font-size: var(--tz-font-label-small-font-size);
        justify-content: center;
        left: 0;
        padding: var(--tz-space-300);
        position: sticky;
        text-align: center;
        top: 0;
        z-index: calc(var(--tz-layer-nav) - 1);
        width: 100%;

        @media (width >= 750px) {
          padding: 0;
          position: fixed;
          height: calc(0.5 * var(--grid-size));
          left: var(--sidebar-width);
          top: var(--grid-size);
          width: calc(100% - var(--sidebar-width));
        }
      }

      .docs-header-nav {
        grid-area: header-nav;

        @media (width >= 900px) {
          position: fixed;
          top: 0;
          z-index: var(--tz-layer-nav);
          width: 100%;
        }
      }

      .docs-sidenav {
        background-color: var(--tz-color-bg-1);
        border-block-end: 1px solid var(--grid-color);
        display: flex;

        @media (width >= 750px) {
          border-block-end: none;
        }

        @media (width >= 900px) {
          height: 100vh;
          left: 0;
          overflow-y: auto;
          position: fixed;
          top: 0;
          width: var(--sidebar-width);
        }
      }

      .content {
        background: var(--tz-color-bg-1);
        max-width: calc(15 * var(--grid-size) - 1px);
        min-height: calc(100vh - var(--grid-size));
        padding-block-start: var(--grid-size);
        padding-block-end: 6rem;
        padding-inline: calc(0.5 * var(--grid-size));

        @media (width >= 900px) {
          margin-inline-start: calc(
            var(--sidebar-width) + 2 * var(--grid-size) + 1px
          );
        }
      }
    </style>
  </head>
  <body>
    <div class="docs">
      <header class="docs-header-nav">
        <DocsHeaderNav />
      </header>
      <main class="main">
        {
          isBeta && (
            <div class="banner" role="status">
              <div>
                You are viewing the 2.0 beta version of the docs.
                <a href={nonBetaVersion}>Return to latest</a>
              </div>
            </div>
          )
        }
        <div class="docs-sidenav">
          <DocsSidenav />
        </div>
        <div class="content md-content">
          <slot />
          <DocsFooterNav />
        </div>
      </main>
    </div>
    <script src="../scripts/copy-code.js"></script>
    <script src="../scripts/tabs.js"></script>
    <script src="../scripts/toc.js"></script>
  </body>
</html>
