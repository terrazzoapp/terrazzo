---
import { DiscordLogo, GitHubLogo } from '@terrazzo/icons';
import DocsSearch from './SearchBox.tsx';
import ThemeSwitcher from './ThemeSwitcher.tsx';
---

<header class="header-nav">
  <div class="search">
    <DocsSearch client:only="react" />
  </div>
  <nav class="nav">
    <ul>
      <li>
        <ThemeSwitcher client:load />
      </li>
      <li>
        <a
          href="https://github.com/terrazzoapp/terrazzo"
          title="Terrazzo on GitHub"
        >
          <GitHubLogo />
        </a>
      </li>
      <li>
        <a
          href="https://discord.gg/cju3dXyHNd"
          title="Join Terrazzo on Discord"
        >
          <DiscordLogo />
        </a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .header-nav {
    align-items: center;
    background-color: var(--tz-color-bg-1);
    border-bottom: var(--tz-border-2);
    color: var(--tz-color-text-1);
    display: flex;
    max-height: var(--grid-size);
    justify-content: space-between;
    padding-inline: var(--tz-space-500);
    width: 100%;
  }

  .search {
    flex: 1 0 auto;
  }

  .nav {
    align-items: center;
    flex-grow: 0 0 auto;
    display: flex;
    position: relative;

    ul {
      align-items: center;
      display: flex;
      gap: var(--tz-space-300);
      list-style: none;
      margin: 0;
      padding: 0;
    }

    li {
      z-index: 50;
    }

    a {
      align-items: center;
      display: flex;
      font-size: var(--tz-font-body-font-size);
      font-weight: var(--tz-font-body-font-weight);
      font-variation-settings: var(--tz-font-body-font-variation-settings);
      gap: var(--tz-space-200);
      height: var(--tz-space-900);
      line-height: 1;
      padding-inline: var(--tz-space-100);
      text-decoration: none;

      &[aria-current] {
        color: var(--tz-color-control-text-selected);
        font-variation-settings: var(
          --tz-font-body-strong-font-variation-settings
        );
      }

      svg {
        height: 1.25rem;
        min-height: 1.25rem;
        min-width: 1.25rem;
        width: 1.25rem;
      }
    }
  }
</style>
